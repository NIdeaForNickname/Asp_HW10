@model IEnumerable<WebApplication11.Models.Book>

<h1>Books</h1>
<table class="table">
    <thead>
    <tr><th>Name</th><th>Author</th><th>Genre</th><th>Price</th><th> </th></tr>
    </thead>
    <tbody>
    @foreach (var b in Model)
    {
        <tr>
            <td>@b.Title</td>
            <td>@b.Author</td>
            <td>@b.Genre</td>
            <td>@b.Price</td>
            <td><a asp-controller="Book" asp-action="Details" asp-route-id="@b.Id">Details</a></td>
        </tr>
    }
    </tbody>
</table>